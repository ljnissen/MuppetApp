<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
  </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.id %></td>
          <td><%= survey.name %></td>
        <td><%=l survey.created_at, format: :long %></td>
        <td>
          <%= link_to survey_path(survey), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_survey_path(survey), :class => 'btn btn-xs', :title => "#{ t('.edit', :default => t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to survey_path(survey), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_survey_path,
            :class => 'btn btn-primary' %>


<h1>Listing Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name: </th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.name %></td>
        <td><%= link_to('Show', {:action => 'show', :id => survey.id}, :class => 'action_show') %>|</td>
        <td><%= link_to('Edit', {:action => 'edit', :id => survey.id}, :class => 'action_edit')  %>|</td>
        <td><%= link_to('Delete', {:action => 'delete', :id => survey.id}, :class => 'action_delete')  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

