<%= form_for @survey, :html => { :class => 'form-horizontal' } do |f| %>

    <legend>Category</legend>
      <div class="form-group">    
        <div class="col-md-10">
        <%= f.label(:name, "Create a new category or use an existing.") %><br /><br />
        <%= f.text_field :name, :class => 'control-label col-md-6' %><br /><br />
        <%= f.select(:name, @surveys.map {|s| [s.name, s.id]}) %>
        </div>
      </div>

      
        <div class="form-group">
          <div class='col-md-offset-1 col-md-10'>

            <%= submit_tag("Next", :class => 'btn btn-primary') %>
            <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                        surveys_path, :class => 'btn btn-default' %>
          </div>
        </div>
<% end %>

