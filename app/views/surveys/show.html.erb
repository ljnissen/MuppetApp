<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @survey.name %></pre></dd>
  </dl>
</div>

<div class="form-group">
		<td><% for question in @survey.questions do %>
					<li><%= h question.content %></li>
					<ul>
						<% for answer in question.answers do %>
							<li><%= h answer.content %></li>
						<% end %>
					</ul>
			<% end %>
		</td>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_survey_path(@survey), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              survey_path,
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <%= @surveys.each do |survey| %>
    <%= link_to('Delete', {:action => :delete, :id => @survey.id}, :class => 'action_delete')  %>
  <% end %>
</div>


