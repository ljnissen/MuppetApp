<%= form_for @survey, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :name, :class => 'text_area col-md-10' %>
    </div>
  </div>

  <div class="form-group">

    <%= f.label :questions, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.fields_for :questions do |ff| %>
          <%= render 'question_fields', :f => ff %>
      </div>
          <%= f.label :answers, :class => 'control-label col-md-2' %> 
            <div class="col-md-10">  
              <%= ff.fields_for :answers do |fff| %>
                  <%= render 'answer_fields', :f => fff %><br /><br />
              <% end %>
            </div>
        <% end %>
  </div> 

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn btn-default'  %>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  surveys_path, :class => 'btn btn-default' %>
    </div>
  </div>
</fieldset>
<% end %>

