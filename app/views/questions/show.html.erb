<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="form-group">
	<div class = "field">
		<td><% for question in @survey.questions do %>
					<li><%= h question.content %></li>
					<ul>
							<% for answer in question.answers do %>
								<li><%= h answer.content %></li>
								<%= label :answer, :correct_answer %>
								<%= radio_button :answer, :correct_answer, true %>
							<% end %>
					</ul>
			<% end %>
		</td>
	</div>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn btn-default'  %>
  <%= link_to t('Previous question', :default => t("helpers.links.previous")),
              @question.previous, :class => 'btn btn-default' %>
  <%= link_to t('Next question', :default => t("helpers.links.next")),
              @question.next, :class => 'btn btn-default' %>
  
</div>



