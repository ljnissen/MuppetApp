<%- model_class = Survey -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="form-group">
	<div class = "field">
		<td><% for question in @survey.questions do %>
					<li><%= h question.content %></li>
					<ul>
							<% for answer in question.answers do %>
									<li><%= h answer.content %></li>
									<%= label :answer, :correct_answer %>
									<%= radio_button :answer, :correct_answer, true %>
							<% end %>
					</ul>
			<% end %>
		</td>
	</div>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              surveys_path, :class => 'btn btn-default'  %>
	<% @surveys.each do |survey| %>
 		<td><%= link_to('Show', {:action => 'show', :id => survey.id}, :class => 'action_show') %>|</td>

  			<%= link_to('Next question', @question.next) %>
  <% end %>
</div>



