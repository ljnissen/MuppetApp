<%- model_class = Gonzo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @gonzo.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:body) %></dt>
      <dd><pre class="prettyprint"><%= @gonzo.body %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to "Select_A", :action => 'check', :id => @gonzo.id, :guess => "a" %> (<%= gonzo.answer %>)<br />
  <%= link_to "Select_B", :action => 'check', :id => @gonzo.id, :guess => "b" %> (<%= gonzo.answer %>)<br />
  <%= link_to "Select_C", :action => 'check', :id => @gonzo.id, :guess => "c" %> (<%= gonzo.answer %>)<br />
  <%= link_to "Select_D", :action => 'check', :id => @gonzo.id, :guess => "d" %> (<%= gonzo.answer %>)<br />
  <%= link_to "Select_E", :action => 'check', :id => @gonzo.id, :guess => "e" %> (<%= gonzo.answer %>)<br />
  <%= link_to "Select_F", :action => 'check', :id => @gonzo.id, :guess => "f" %> (<%= gonzo.answer %>)<br />
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gonzos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_gonzo_path(@gonzo), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              gonzo_path(@gonzo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>